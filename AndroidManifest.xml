<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wilsonvillerobotics.firstteamscouter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_BLUETOOTH_SHARE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="FIRSTTeamScouter">
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.EnterTeamMatchDataActivity"
            android:label="@string/title_activity_enter_team_match_data"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.ImportMatchDataActivity"
            android:label="@string/title_activity_import_match_data"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.SelectMatchTeamActivity"
            android:label="@string/title_activity_team_match_list"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.TeamInformationActivity"
            android:label="@string/title_activity_team_informatrion"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.ViewDataActivity"
            android:label="@string/title_activity_view_data"
			android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.wilsonvillerobotics.firstteamscouter.TeamDataListActivity"
            android:label="@string/title_activity_team_data_list"
            android:screenOrientation="landscape"  >
        </activity>
        <activity android:name="TeamMatchDataListActivity"
            android:screenOrientation="landscape" ></activity>
        <activity android:name="TeamMatchInformationActivity"
            android:screenOrientation="landscape" ></activity>
        <activity android:name="BluetoothSetupActivity"
            android:screenOrientation="landscape" ></activity>
        <activity android:name="SetPreferenceActivity"
            android:screenOrientation="landscape" ></activity>
        </application>

</manifest>
