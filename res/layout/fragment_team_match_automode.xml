<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:alignmentMode="alignBounds"
    android:background="@drawable/field_end_800_367"
    android:columnCount="12"
    android:orientation="horizontal"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:rowCount="18"
    android:rowOrderPreserved="true" >

    <TextView
        android:id="@+id/lblAutoHiScore"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/label_auto_hi"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtAutoScore"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_column="8"
        android:layout_columnSpan="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lblAutoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:text="@string/label_auto_score"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnAutoHiScoreHot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:background="@android:drawable/btn_default"
        android:paddingLeft="10dp"
        android:text="@string/text_button_hot_score" />

    <Button
        android:id="@+id/btnAutoHiScoreCold"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="1"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_cold_score" />

    <Button
        android:id="@+id/btnAutoHiMiss"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_row="8"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_miss_score" />

    <Button
        android:id="@+id/btnAutoCollect"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="8"
        android:layout_gravity="center"
        android:layout_row="11"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_auto_collect" />

    <Button
        android:id="@+id/btnAutoDefend"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="9"
        android:layout_gravity="center"
        android:layout_row="11"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_auto_defend" />

    <Button
        android:id="@+id/btnAutoLoScoreHot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_row="11"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_hot_score" />

    <Button
        android:id="@+id/btnAutoLoScoreCold"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="12"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_cold_score" />

    <Button
        android:id="@+id/btnAutoLoMiss"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_row="12"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_miss_score" />

    <Button
        android:id="@+id/btnAutoMove"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="7"
        android:layout_gravity="center"
        android:layout_row="11"
        android:background="@android:drawable/btn_default"
        android:text="@string/text_button_auto_move" />

    <TextView
        android:id="@+id/lblAutoLoScore"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_row="8"
        android:paddingBottom="10dp"
        android:text="@string/label_auto_lo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/switchUndo"
        android:layout_column="9"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="5dp"
        android:layout_row="0"
        android:text="@string/text_button_Undo" />

</GridLayout>