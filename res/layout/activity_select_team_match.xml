<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTeamMatchListTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/title_activity_team_match_list"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblMatchNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/label_match_number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinMatchNumber"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblTeamTumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/label_team_number"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/spinTeamNumber"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" />
    </LinearLayout> -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <GridLayout
            android:id="@+id/gridRedAlliance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/gridSpacer"
            android:columnCount="2"
            android:rowCount="4" >

            <TextView
                android:id="@+id/lblRed1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:text="Red 1"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtRed1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:text="####"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lblRed2"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:text="Red 2"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtRed2"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:text="####"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lblRed3"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:text="Red 3"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtRed3"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:text="####"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </GridLayout>

        <Space
            android:id="@+id/gridSpacer"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        
        <GridLayout
            android:id="@+id/gridBlueAlliance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/gridSpacer"
            android:columnCount="2"
            android:rowCount="4" >

            <TextView
                android:id="@+id/lblBlue1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:text="Blue 1"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtBlue1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:text="####"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lblBlue2"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:text="Blue 2"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtBlue2"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:text="####"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/lblBlue3"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:text="Blue 3"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtBlue3"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:text="####"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </GridLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmitTeamMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/text_button_select_match" />

</LinearLayout>
